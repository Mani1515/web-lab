<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="3.0">

    <!-- Servlet Declaration -->
    <servlet>
        <servlet-name>ReviewServlet</servlet-name>
        <servlet-class>com.example.servlets.ReviewServlet</servlet-class>
    </servlet>

    <!-- Servlet Mapping -->
    <servlet-mapping>
        <servlet-name>ReviewServlet</servlet-name>
        <url-pattern>/displayReviews</url-pattern>
    </servlet-mapping>

</web-app>
